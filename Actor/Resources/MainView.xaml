<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:viewModels="clr-namespace:Actor.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
        <Grid>
            <materialDesign:DialogHost IsOpen="{Binding IsLoading}">
                <materialDesign:DialogHost.DialogContent>
                    <Grid x:Name="LoadingGrid" Width="150" Height="100">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding LoadingText}" 
                                   Grid.Row="0"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Center"
                                   FontStyle="Italic"/>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Grid.Row="2">
                            <ProgressBar VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                         Style="{DynamicResource MaterialDesignCircularProgressBar}"
                                         Value="0"
                                         IsIndeterminate="True" />
                            <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                    IsCancel="True"
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    HorizontalAlignment="Right" 
                                    Content="{Binding LoadingCancelText}"
                                    x:Name="CancelLoading"
                                    Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
                <Grid x:Name="ContentGrid" Visibility="Visible">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center" 
                               Text="Test Text"/>
                </Grid>
            </materialDesign:DialogHost>
        </Grid>
        
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsLoadingCancelVisible}" Value="True">
                <Setter TargetName="CancelLoading" Property="Visibility" Value="Visible" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>